<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <system.serviceModel>
    
    <diagnostics performanceCounters="All" />
  
    <services>
      <service name="DiscoveryAnnouncementChat.ChatServer">
        <!--<endpoint kind="udpDiscoveryEndpoint" />-->
        <endpoint 
          address="net.tcp://localhost:8080/chat"
          binding="netTcpBinding"
          contract="DiscoveryAnnouncementChat.IChatServer" />          
      </service>        
    </services>
    <client>
      <!--<endpoint kind="udpDiscoveryEndpoint" />-->
      <endpoint kind="udpAnnouncementEndpoint" />
      <endpoint
        address="net.tcp://localhost:8088/chatclient"
        binding="netTcpBinding"
        contract="DiscoveryAnnouncementChat.IChatClient" />
    </client>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceDiscovery>
            <announcementEndpoints>
              <endpoint kind="udpAnnouncementEndpoint"/>
            </announcementEndpoints>
          </serviceDiscovery>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>